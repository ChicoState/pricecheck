{
  "name": "Pricechecker",
  "description": "Compare prices across multiple retailers using AI-powered analysis.",
  "version": "1.2",
  "manifest_version": 3,
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "https://api.example.com/*",
    "https://*.amazon.com/*",
    "https://*.walmart.com/*",
    "https://*.bestbuy.com/*",
    "https://*.ebay.com/*",
    "http://localhost/*"
  ],
  "action": {
    "default_popup": "index.html",
    "default_icon": "pricechecker.png"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.amazon.com/*",
        "https://*.walmart.com/*",
        "https://*.bestbuy.com/*",
        "https://*.ebay.com/*"
      ],
      "js": [
        "content-price.js"
      ]
    }
  ],
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+B",
        "mac": "Command+B"
      }
    }
  }
}